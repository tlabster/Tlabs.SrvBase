<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <VersionPrefix>2.0.4</VersionPrefix>
    <TargetFramework>net5.0</TargetFramework>
    <OutputType>Library</OutputType>
    <RuntimeFrameworkVersion>5.0.0</RuntimeFrameworkVersion>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>

    <Description>The base foundation of a Tlabs web-application server.</Description>
    <Authors>Tlabs</Authors>
  </PropertyGroup>

  <PropertyGroup>
    <IsPackable>true</IsPackable>
    <PackageLicenseExpression>LGPL-3.0-only</PackageLicenseExpression>
    <PackageProjectUrl>https://bitbucket.org/tlabster/tlabs.srvbase</PackageProjectUrl>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="../../Tlabs.Core/src/Tlabs.Core.csproj" />
    <ProjectReference Include="../../Tlabs.Data/src/Tlabs.Data.csproj" />
  </ItemGroup>


  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging.Debug" Version="5.0.*" />
    <PackageReference Include="Microsoft.Extensions.Configuration.CommandLine" Version="5.0.*" />
    <PackageReference Include="Serilog.Extensions.Logging.File"  Version="2.0.*" />
    <PackageReference Include="Microsoft.Extensions.DependencyModel" Version="5.0.*" />
  </ItemGroup>

</Project>
